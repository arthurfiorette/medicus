{
  "name": "medicus",
  "version": "1.0.0",
  "description": "A flexible and agnostic health check library for Node.js.",
  "bugs": {
    "url": "https://github.com/arthurfiorette/medicus/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/arthurfiorette/medicus.git"
  },
  "license": "MIT",
  "author": "Arthur Fiorette <me@arthur.place>",
  "contributors": [
    {
      "name": "Gabriel Alves",
      "email": "alv7contato@outlook.com",
      "url": "https://alvseven.com"
    }
  ],
  "sideEffects": false,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "format": "biome format --write .",
    "generate": "node scripts/postbuild.js",
    "lint": "biome check .",
    "lint:ci": "biome ci .",
    "lint:fix": "biome check --write --unsafe .",
    "prepare": "husky",
    "test": "c8 --reporter lcov --reporter text tsx --enable-source-maps --test test/**/*.test.ts"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.35",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@arthurfiorette/biomejs-config": "^2.0.0",
    "@biomejs/biome": "^2.0.4",
    "@fastify/under-pressure": "^9.0.3",
    "@shikijs/vitepress-twoslash": "^3.7.0",
    "@types/node": "^24.0.10",
    "c8": "^10.1.2",
    "husky": "^9.1.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3",
    "vitepress-plugin-llms": "^1.5.1"
  },
  "peerDependencies": {
    "avvio": "^9.1.0",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.5.0"
  },
  "peerDependenciesMeta": {
    "avvio": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "fastify-plugin": {
      "optional": true
    },
    "pino": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=18"
  }
}
