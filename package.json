{
  "name": "medicus",
  "version": "0.1.0",
  "description": "A flexible and agnostic health check library for Node.js.",
  "bugs": {
    "url": "https://github.com/arthurfiorette/medicus/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/arthurfiorette/medicus.git"
  },
  "license": "MIT",
  "author": "Arthur Fiorette <me@arthur.place>",
  "sideEffects": false,
  "type": "commonjs",
  "main": "dist/index.js",
  "files": [
    "avvio.d.ts",
    "avvio.js",
    "fastify.d.ts",
    "fastify.js",
    "node.d.ts",
    "node.js",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:ci": "biome ci .",
    "lint:fix": "biome check --write --unsafe .",
    "prepare": "husky",
    "test": "c8 --reporter lcov --reporter text tsx --enable-source-maps --test test/**/*.test.ts"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.9",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@arthurfiorette/biomejs-config": "^1.0.6",
    "@biomejs/biome": "^1.9.4",
    "@fastify/under-pressure": "^9.0.1",
    "@shikijs/vitepress-twoslash": "^1.23.1",
    "@types/node": "^22.9.3",
    "c8": "^10.1.2",
    "husky": "^9.1.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitepress": "^1.5.0"
  },
  "peerDependencies": {
    "avvio": "^9.1.0",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.5.0"
  },
  "peerDependenciesMeta": {
    "avvio": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "fastify-plugin": {
      "optional": true
    },
    "pino": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=18"
  }
}
